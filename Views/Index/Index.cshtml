@model airbnb.Models.HomeSearchViewModel

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm(controllerName: "Homes", actionName: "Index", method: FormMethod.Get))
{
    @Html.AntiForgeryToken()    
    <div class="row">
        @Html.ValidationSummary(true)
        <div class="col-1"></div>
        <div class="form-group col-4">
            @Html.LabelFor(model => model.Location, new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control mt-2" } })
            @Html.ValidationMessageFor(model => model.Location)
        </div>
        <div class="form-group col-3">
            @Html.LabelFor(model => model.Period, new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Period,  new { htmlAttributes = new { @class = "form-control mt-2" } })
            @Html.ValidationMessageFor(model => model.Period)
        </div>
        <div class="form-group col-1">
            @Html.LabelFor(model => model.Guests, new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Guests,  new { htmlAttributes = new { @class = "form-control mt-2", min = 1 } })
            @Html.ValidationMessageFor(model => model.Guests)
        </div>
        <div class="form-group col-2">
            <br/>
            <input type="submit" value="Find home" class="mt-2 btn btn-secondary"/>
        </div>
        <div class="col-1"></div>
    </div>
}

@section Scripts
{
    <script>
        $(document).ready(function() {
            $('input#Period').daterangepicker({
              "autoApply": true,
            });
            $('input#Period').val('');
        });
    </script>
}
