@model airbnb.Models.BookingCreateViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center>
    <h4>Reservation for @Html.ActionLink(@Model.Home.Name, "Details", "Homes", new { @Model.Home.Id })</h4>
</center>

<hr />
<div class="row">
    <div class="col-md-6 mx-auto">
        <form asp-action="Create">
            <input asp-for="HomeId" type="hidden" value="@Model.Home.Id"/>
            <div class="form-group">
                <label asp-for="DateRange" class="control-label"></label>
                <input asp-for="DateRange" class="mt-1 form-control" />
                <span asp-validation-for="DateRange" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <label asp-for="Guests" class="control-label"></label>
                <input asp-for="Guests" class="mt-1 form-control" />
                <span asp-validation-for="Guests" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <label asp-for="GuestNote" class="control-label"></label>
                <textarea asp-for="GuestNote" class="mt-1 form-control"></textarea>
                <span asp-validation-for="GuestNote" class="text-danger"></span>
            </div>
            <div style="float: right">
                <button class="mt-4 btn btn-primary" type="submit">Send to the host</button>
            </div>
        </form>
    </div>
</div>

